        . /opt/local/etc/bash_completion
    fi

# The original version is saved in .profile.pysave
PATH="${HOME}/bin:$HOME/Library/Python/3.11/bin:/Library/TeX/texbin/:/Library/Frameworks/Python.framework/Versions/3.11/bin:/Users/andy/Library/Python/3.11/bin:${PATH}"
